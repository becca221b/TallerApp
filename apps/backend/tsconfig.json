{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["../../domain/dist/*"],
      "@/domain/*": ["../../domain/dist/*"],
      "src/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../../domain" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
