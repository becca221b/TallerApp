{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/domain/*": ["../../domain/src/*"],
      "@/domain": ["../../domain/src"]
    }
  },
  "references": [{ "path": "../../domain" }],
  "include": ["src"]
}
