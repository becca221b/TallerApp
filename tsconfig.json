{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./domain/src/*"],
      "@/domain/*": ["./domain/src/*"]
    }
  },
  "references": [
    { "path": "./domain" },
    { "path": "./apps/backend" },
    { "path": "./apps/frontend" }
  ]
}