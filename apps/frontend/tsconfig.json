{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@domain/*": ["../../domain/src/*"],
      "@/domain/*": ["../../domain/src/*"]
    }
  },
  "references": [{ "path": "../../domain" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
